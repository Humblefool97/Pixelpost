rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Posts collection
    match /posts/{postId} {
      // Anyone authenticated can read posts
      allow read: if isSignedIn();
      
      // Only authenticated users can create posts
      // Ensure userId matches the authenticated user
      allow create: if isSignedIn() && 
                      request.resource.data.userId == request.auth.uid;
      
      // Only post owner can update or delete
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Likes collection
    match /likes/{likeId} {
      // Anyone authenticated can read likes
      allow read: if isSignedIn();
      
      // Only authenticated users can create likes
      allow create: if isSignedIn();
      
      // Users can delete their own likes
      allow delete: if isSignedIn();
    }
    
    // Comments collection
    match /comments/{commentId} {
      // Anyone authenticated can read comments
      allow read: if isSignedIn();
      
      // Only authenticated users can create comments
      allow create: if isSignedIn() && 
                      request.resource.data.userId == request.auth.uid;
      
      // Only comment owner can update or delete
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // User profiles collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isSignedIn();
      
      // Users can only write to their own profile
      allow write: if isOwner(userId);
    }
    
    // User preferences (private data)
    match /userPreferences/{userId} {
      // Only the user can read/write their own preferences
      allow read, write: if isOwner(userId);
    }
    
    // Saved posts mapping
    match /savedPosts/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Following/Followers mapping
    match /following/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    match /followers/{userId} {
      allow read: if isSignedIn();
      // Can't directly modify followers, only through following
      allow write: if false;
    }
  }
}

