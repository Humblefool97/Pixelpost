rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // DEVELOPMENT MODE - More permissive rules for testing
    // ⚠️ WARNING: These rules allow authenticated users to read/write everything
    // Use firestore.rules for production with proper restrictions
    
    match /{document=**} {
      // Allow all authenticated users to read and write
      allow read, write: if request.auth != null;
    }
  }
}

